# Application
APP_URL=http://localhost:8080
APP_ENV=development
APP_KEY=change-me-in-production-32chars!

# Admin credentials (created on first startup)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=changeme

# Mail settings
MAIL_DOMAIN=mail.example.com
SMTP_LISTEN_ADDR=:2525
HTTP_LISTEN_ADDR=:8080

# Database (sqlite or postgres)
DB_DRIVER=sqlite
DB_DSN=mailgress.db

# For PostgreSQL:
# DB_DRIVER=postgres
# DB_DSN=postgres://mailgress:mailgress@localhost:5432/mailgress?sslmode=disable

# Storage
STORAGE_PATH=./data/attachments

# Limits
MAX_EMAIL_SIZE_MB=25
MAX_ATTACHMENT_SIZE_MB=10
RETENTION_DAYS=90

# Webhook settings
WEBHOOK_MAX_RETRIES=3
WEBHOOK_TIMEOUT_SEC=30
WEBHOOK_WORKERS=5
